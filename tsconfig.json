{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2020",
    "module": "commonjs",

    /* Project Structure */
    "rootDir": "./src",
    "outDir": "./dist",

    /* Strictness */
    "strict": true,

    /* Node Compatibility */
    "esModuleInterop": true,
    "types": ["node"],

    /* Quality of Life */
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
